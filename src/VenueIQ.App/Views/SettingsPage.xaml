<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:VenueIQ.App.ViewModels"
             xmlns:loc="clr-namespace:VenueIQ.App.Helpers"
             x:Class="VenueIQ.App.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding [Settings_Title], Source={x:Static loc:LocalizationResourceManager.Instance}}">
    <VerticalStackLayout Padding="24" Spacing="16">
        <Label Text="{Binding [Settings_Title], Source={x:Static loc:LocalizationResourceManager.Instance}}" />
        <HorizontalStackLayout>
            <Label Text="{Binding [Settings_LanguageLabel], Source={x:Static loc:LocalizationResourceManager.Instance}}" />
            <Picker AutomationId="Settings.LanguagePicker"
                    ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding Language}" />
        </HorizontalStackLayout>
        <Button Text="{Binding [Settings_RetestApiKey], Source={x:Static loc:LocalizationResourceManager.Instance}}" AutomationId="Settings.RetestApiKeyButton" />
    </VerticalStackLayout>
</ContentPage>
